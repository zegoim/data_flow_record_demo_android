<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
    </style>

    <!-- window 透明的-->
    <style name="Theme.AppCompat.Translucent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Full" parent="Theme.AppCompat.Translucent">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="wrap_wh_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tips_title" parent="wrap_wh_style">
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">26dp</item>
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:textColor">#ff565e66</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="input_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">26dp</item>
        <item name="android:layout_marginEnd">26dp</item>
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#202428</item>
        <item name="android:textColorHint">#ffcccccc</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>